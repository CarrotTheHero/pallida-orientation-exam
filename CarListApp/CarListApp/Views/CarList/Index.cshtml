@model List<CarListApp.Models.Car>

<html>
<head>
</head>
<body>
    <h1>Search</h1>
    <form action="/search" method="get">
        <label for="plates">Plate: </label>
        <input type="text" id="Plate" name="Plate" />
        <div>
            <button type="submit">Search</button>
        </div>
    </form>
    @{
        if (@Model != null)
        {
            <div>
                <div>
                    <table>
                        <thead>
                            <tr>
                                <th>Licence Plate</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>Color</th>
                                <th>Year</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Plate</td>
                                    <td><a href="/search/@item.Car_brand">@item.Car_brand</a></td>
                                    <td>@item.Car_model</td>
                                    <td>@item.Color</td>
                                    <td>@item.Year</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        }
    }
</body>
</html>